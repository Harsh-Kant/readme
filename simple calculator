#include <iostream>

using namespace std;

int main()
{
    int x,y,sum,sub,mult;
    char op;
    cout<<"Enter first number"<<endl;
    cin>>x;
    cout<<"Enter the operator(e.g.:+,-,*,/)"<<endl;
    cin>>op;
    cout<<"Enter second number"<<endl;
    cin>>y;
    sum=x+y;
    sub=x-y;
    mult=x*y;
    

    if(op=='+')
    {
        cout<<"Sum = "<<sum<<endl;
    }
    else if(op=='-')
    {
        cout<<"Subtract = "<<sub<<endl;
    }
    else if(op=='*')
    {
        cout<<"Product = "<<mult<<endl;
    }
    else if(op=='/')
    {
            if(y==0)
            {
                cout<<"Invalid! Denominator cannot be zero";
            }
            cout<<"Division = "<<x/y<<endl;
           
    }
    else
    {
        cout<<"Invalid input!"<<endl;
    }
    return 0;
}
